<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
       .create-rec{
    color: white;
  }
    </style>
</head>
<body>
    <div class="container">
      <div class="d-flex justify-content-between">
        <h1>Read Page</h1>
        
        <button type="button" class="btn btn-info">
          <a href="/" class="create-rec">Create Record</a>
        </button>
      </div>
        <div class="row">
          <% if(rows.length>0){ %>
            <% rows.map((eachData)=>{ %>
              <div class="col-md-4 mx-1">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%- eachData.name %> </h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%- eachData.email %></h6>
                     
                      <a href="/update-data?id=<%- eachData.id %>" class="card-link">Edit</a>
                      <a href="/delete-data?id=<%- eachData.id %>" class="card-link">Delate</a>
                    </div>
                  </div>
              </div>
            <% }); %>

          <% } else {%>
              <div class="col-md-4 mx-1">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title">No Data Available</h5>
                    </div>
                  </div>
              </div>
          <% } %>
        </div>
    </div>
</body>
</html>